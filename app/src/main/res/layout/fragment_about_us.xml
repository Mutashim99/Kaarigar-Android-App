<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- About Us Heading -->
    <TextView
        android:id="@+id/text_about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/inter_bold"
        android:text="About Us"
        android:textColor="@color/maintheme"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Company Description -->
    <TextView
        android:id="@+id/text_company_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/inter_medium"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/company_description_long"
        android:textSize="16sp" />

    <!-- Group Members Heading -->
    <TextView
        android:id="@+id/text_group_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/inter_bold"
        android:text="Group Members"
        android:textColor="@color/maintheme"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Team Members Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <!-- Team Member 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_member1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Team Member 1"
                android:scaleType="centerCrop"
                android:src="@drawable/myimg" />

            <TextView
                android:id="@+id/text_member1_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Hafiz M. Mutashim Mohsin  \n2023F-BSE-099"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Team Member 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_member2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Team Member 2"
                android:scaleType="centerCrop"
                android:src="@drawable/defaultprof" />

            <TextView
                android:id="@+id/text_member2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Izhar ul Haq  \n2023F-BSE-320"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Team Member 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_member3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Team Member 3"
                android:scaleType="centerCrop"
                android:src="@drawable/rayyanimg" />

            <TextView
                android:id="@+id/text_member3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Rayyan Wamiq  \n2023F-BSE-095"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Team Member 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_member4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Team Member 4"
                android:scaleType="centerCrop"
                android:src="@drawable/defaultprof" />

            <TextView
                android:id="@+id/text_member4_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Jazib Noor \n2023F-BSE-065"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <!-- GitHub Button -->
    <Button
        android:id="@+id/button_github"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/inter_bold"
        android:text="Visit Our GitHub"
        app:cornerRadius="10dp" />

</LinearLayout>
